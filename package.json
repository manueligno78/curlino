{
  "name": "curlino",
  "version": "1.3.2",
  "description": "Modern cross-platform desktop app to import, manage and execute curl commands with a beautiful graphical interface. Built with Electron, React, and TypeScript.",
  "main": "out/main/electron.js",
  "type": "module",
  "homepage": "https://github.com/manueligno78/curlino#readme",
  "bugs": {
    "url": "https://github.com/manueligno78/curlino/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manueligno78/curlino.git"
  },
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "electron-vite dev",
    "build": "electron-vite build && cp preload-simple.js out/main/",
    "preview": "electron-vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,json}\"",
    "test:coverage": "jest --coverage",
    "electron": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "build-prod": "npm run build",
    "quality": "npm run lint && npm run format:check && npm run test",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "curlino",
    "curl-import",
    "curl-gui",
    "curl-manager",
    "curl-to-gui",
    "rest-api-client",
    "api-testing",
    "http-client",
    "desktop-app",
    "electron",
    "react",
    "typescript",
    "curl",
    "curl-converter",
    "postman-alternative",
    "cross-platform",
    "api-development",
    "rest-client",
    "http-requests",
    "api-management",
    "developer-tools",
    "testing-tools",
    "insomnia-alternative"
  ],
  "author": {
    "name": "Curlino Project",
    "url": "https://github.com/manueligno78/curlino"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.55.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "http-status-message": "^1.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.curlino.app",
    "productName": "Curlino",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
